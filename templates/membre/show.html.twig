{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ membre.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ membre.roles ? membre.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>*****</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ membre.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ membre.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ membre.adresse }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ membre.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ membre.ville }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ membre.tel }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table tabl-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Montant</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
            {% for cmd in membre.commandes %}
                <tr>
                    <td>{{ cmd.id }}</td>
                    <td>{{ cmd.dateEnregistremenet|date("d/m/y") }}</td>
                    <td>{{ cmd.montant }} â‚¬</td>
                    <td>{{ cmd.etat }}</td>
                </tr>
            {% else %}
                <td colspan=4>Aucune commande pour ce membre</td>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('membre_index') }}">back to list</a>

    <a href="{{ path('membre_edit', {'id': membre.id}) }}">edit</a>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
